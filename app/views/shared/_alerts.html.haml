- if flash[:success]
  .alert.alert-success.alert-dismissible{ data: { role: "alert" } }
    %button{ type: "button", class: "close", "data-dismiss" => "alert", "aria-label" => "Close" }
      %span{ "aria-hidden" => "true" }
        = fa_icon("times")
    = flash[:success]
- if flash[:error]
  .alert.alert-danger.alert-dismissible{ role: "alert" }
    %button{ type: "button", class: "close", "data-dismiss" => "alert", "aria-label" => "Close" }
      %span{ "aria-hidden" => "true" }
        = fa_icon("times")
    = flash[:error]
