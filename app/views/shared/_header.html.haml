%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#rareshare-navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        -3.times do
          %span.icon-bar
      %a.navbar-brand{:href => root_path}
        = image_tag 'logo.png'
    .collapse.navbar-collapse#rareshare-navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  Communities
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to 'Join a Community', communities_path
                  %li
                    = link_to 'Create a Community', new_community_path
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %ul.nav.navbar-nav
            %li
              = link_to I18n.t("navigation.sign_in").upcase, new_user_session_path
            %li
              = link_to I18n.t("navigation.register").upcase, new_user_registration_path
