%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        -3.times do
          %span.icon-bar
      %a.navbar-brand{:href => root_path}
        = image_tag 'logo.png', class: 'icon-image'
      %form.navbar-form.navbar-left{:role => "search"}
        .form-group
        = form_tag communities_path, class: "form-inline", method: :get do
          .form-group
            = text_field_tag :query, params[:query], class: "form-control"
          = submit_tag "Search", class: "btn btn-primary"
          - if params[:query].present?
            = link_to "clear", communities_path
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              My Profile
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'View Profile', profile_path(current_user)
              %li
                = link_to 'Edit Profile', edit_user_registration_path
              %li
                = link_to "Logout", destroy_user_session_path, method: :delete
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Communities
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Join a Community', new_membership_path
              %li
                = link_to 'Create a Community', new_community_path
              %li
                = link_to 'My Communities', profile_path(current_user)
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Sign In", new_user_session_path
          %li
            = link_to "Register", new_user_registration_path
