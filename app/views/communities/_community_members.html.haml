.panel.panel-default
  .panel-heading
    %h3.panel-title
      = I18n.t("community.members")
      .pull-right
        = link_to I18n.t("community.view_all"), memberships_path(community_id: @community.id)
  .panel-body
    .row
      - @community.recent_members(6).each do |member|
        .col-md-4.padding--small--vertical
          = image_tag("default_avatar.png", size: "100x100")
          .text-center
            %strong
              = link_to member.name, profile_path(member)

