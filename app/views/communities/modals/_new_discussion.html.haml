#new_discussion.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %span.pull-right{ data: { dismiss: "modal" }, aria: { hidden: "true" } }
          = fa_icon("times")
        %span.sr-only
          = "Close"
        %h3.modal-title
          = "New Discussion"
        .modal-body
          = render partial: 'discussions/form', locals: { discussion: @discussion }


