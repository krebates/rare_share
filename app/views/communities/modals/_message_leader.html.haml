#message_leader.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %span.pull-right{ data: { dismiss: "modal" }, aria: { hidden: "true" } }
          = fa_icon("times")
        %span.sr-only
          = "Close"
        %h3.modal-title
          = "Message Your Leader"
        .modal-body
          = simple_form_for :conversation, url: conversations_path do |f|
            = f.input :recipient_ids, as: :hidden, input_html: { value: leaders.map(&:id) }
            .form-group
              = f.input :subject, input_html: { class: 'form-control' } 
            .form-group
              = f.input :body, as: :text, input_html: { rows: 10, cols: 60, class: 'form-control'  }
            %br
            .modal-footer
              = form_buttons(f, submit_text: "Send")
