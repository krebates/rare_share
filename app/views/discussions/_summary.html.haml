%h3
  = "Discussion Forum"

.list-group
  - if @community.discussions.present?
    - @community.discussions.each do |discussion|
      .list-group-item
        %h4.list-group-item-heading 
          %strong
            = link_to "#{discussion.title}", discussion_path(discussion)
        %p.list-group-item-text
          = "Created by"
          %strong
            = link_to "#{discussion.author.name}", profile_path(discussion.author)
          = "Last updated #{discussion.last_updated}"
  - else
    %p
      = "No discussions have been started for this community. Start one by clicking on the Discussion Forum tab and adding a new discussion."
