.panel.panel-info
  .panel-heading
    .panel-title Sign Up
    %div{:style => "float:right; font-size: 85%; position: relative; top:-10px"}
      %a#signinlink{:href => "#", :onclick => "$('#signupbox').hide(); $('#loginbox').show()"} Sign In
  .panel-body
    %form#signupform.form-horizontal{:role => "form"}
      #signupalert.alert.alert-danger{:style => "display:none"}
      = form_for @user, url: user_registration_path do |f|

        %p
          = devise_error_messages!
        %span
        .form-group
          %label.col-md-3.control-label{:for => "email"}Email
          .col-md-9
            = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address"
        .form-group
          %label.col-md-3.control-label{:for => "username"}Username
          .col-md-9
            = f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username"

        .form-group
          %label.col-md-3.control-label{:for => "firstname"} First Name
          .col-md-9
            = f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name"

        .form-group
          %label.col-md-3.control-label{:for => "lastname"} Last Name
          .col-md-9
            = f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username"

        .form-group
          %label.col-md-3.control-label{:for => "password"} Password
          .col-md-9
            = f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password"

        .form-group
          %label.col-md-3.control-label{:for => "icode"} Password Confirmation
          .col-md-9
            = f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Password Confirmation"

        .form-group
          / Button
          .col-md-offset-3.col-md-9
            %i.icon-hand-right
            = f.submit "Sign Up", id: "btn-login", class: "btn btn-primary"
            %span{:style => "margin-left:8px;"} or
        .form-group{:style => "border-top: 1px solid #999; padding-top:20px"}
          .col-md-offset-3.col-md-9
            %button#btn-fbsignup.btn.btn-primary{:type => "button"}
              %i.icon-facebook
              Â  Sign Up with Facebook



.row
  .col-md-12
    %h2 Sign up
    = simple_form_for @user, url: user_registration_path do |f|
      = devise_error_messages!
      %div
        = f.input :first_name, autofocus: true
        = f.input :last_name, autofocus: true
        = f.input :username, autofocus: true
        = f.input :email, autofocus: true
        = f.input :dob, autofocus: true, as: :date
        = f.input :password
        - if @validatable
          %i
            (#{@minimum_password_length} characters minimum)
        = f.input :password_confirmation
        = f.submit "Sign up"
    = render "devise/shared/links"