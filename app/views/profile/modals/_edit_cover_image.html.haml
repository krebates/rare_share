#edit_profile_image.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %span.pull-right{ data: { dismiss: "modal" }, aria: { hidden: "true" } }
          = fa_icon("times")
        %span.sr-only
          = "Close"
        %h3.modal-title
          = "Edit Profile Image"
        .modal-body
          = form_for @user, :html => { :multipart => true }, url: profile_path(@user) do |f|
            = f.fields_for :user_attachments do |p|
              = p.label :avatar
              words
              = p.file_field :avatar, :multiple => true, name: "user_attachment[avatar][]"
              = f.hidden_field :user_id, :value => current_user.id
              .modal-footer
                .form-actions.pull-right
                  = form_buttons(p, submit_text: "Save")

