#send_message.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %span.pull-right{ data: { dismiss: "modal" }, aria: { hidden: "true" } }
          = fa_icon("times")
        %span.sr-only
          = "Close"
        %h3.modal-title
          = "Send Message to #{@user.name}"
        .modal-body
          = simple_form_for :conversation, url: :conversations do |f|
            = f.input :recipient_id, as: :hidden, value: @user.id
            .form-group
              = f.input :subject, input_html: { class: 'form-control' }
            .form-group
              = f.input :body, as: :text, input_html: { class: 'form-control', rows: 10, cols: 8 }
            %br
            .modal-footer
              .form-actions.pull-right
                = form_buttons(f, submit_text: "Send")

      
