#edit_profile_photo.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %span.pull-right{ data: { dismiss: "modal" }, aria: { hidden: "true" } }
          = fa_icon("times")
        %span.sr-only
          = "Close"
        %h3.modal-title
          = "Edit Profile Image"
        .modal-body
          = form_for @user, url: profile_path(@user), :html => {:multipart => true} do |f|
            = file_field_tag "images[]", type: :file, multiple: true
            = f.submit "submit", :class => "btn btn-default"


          %br
          .modal-footer
            .form-actions.pull-right

