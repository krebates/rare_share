- content_for(:modal_title) do
  = "Reply"

- content_for(:modal_body) do
  = simple_form_for :reply, url: conversation_replies_path(conversation) do |f|
    = f.input :conversation_id, as: :hidden, input_html: { value: conversation.id }
    = f.input :subject, input_html: { value: "Re: #{conversation.subject}", readonly: true }
    = f.input :body, as: :text
    .modal-footer
      = form_buttons(f, submit_text: "Start Discussion")

#conversation_reply.modal.fade
  = render template: "style_guide/modal"

