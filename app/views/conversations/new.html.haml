%h2
  My Mail
  %ul
  - @conversations.each do |conversation|
    %li
      = conversation.subject
      %p 
        -# TODO Refactor please
        = Mailboxer::Message.find(conversation).body
      = link_to "Reply", new_conversation_reply_path(conversation)


-# TODO Create presenter for collection

= simple_form_for :conversation, url: :conversations do |f|
  = f.input :recipient_id, collection: current_user.communities.map(&:members).flatten, label_method: :name, value_method: :id
  = f.input :subject
  = f.input :body, as: :text
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = f.button :submit, 'Cancel', type: :reset, class: 'btn-danger'

