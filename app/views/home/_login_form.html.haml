= form_for User.new, as: :user, url: session_path(:user), method: :post, class: 'form-group' do |f|
  .input-group{:style => "margin-bottom: 25px"}
    %span.input-group-addon
      %i.glyphicon.glyphicon-user
    = f.email_field :email, id: "login-email", class: "form-control", placeholder: I18n.t("form.email")

  .input-group{:style => "margin-bottom: 25px"}
    %span.input-group-addon
      %i.glyphicon.glyphicon-lock
    = f.password_field :password, id: "login-password", class: "form-control", placeholder: I18n.t("form.password")

  .form-group
    .controls
      = f.submit I18n.t("form.login"), id: "btn-login", class: "btn btn-rareshare"
